<% if @article.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show notification <%= render_from %>" role="alert">
    <h4 class="alert-heading notification-heading">Error in saving article</h4>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <ul class="notification-lists mt-2">
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
