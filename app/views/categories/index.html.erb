<div class="categories">
  <h1 class="main-heading">Categories</h1>

  <div class="container">
    <div class="mb-3">
      <%= will_paginate @categories %>
    </div>

    <ul>
      <% @categories.each do |cat| %>
        <li><%= link_to cat.name, category_path(cat) %></li>
      <% end %>
    </ul>

    <div class="mt-3">
      <%= will_paginate @categories %>
    </div>
  </div>

</div>
