<div class="formglobal">
  <%= render partial: "shared/errors", locals: { notif: @user, render_from: "notification-users" } %>

  <%= form_with model: @user, local: true do |f| %>
    <div class="form-group row formglobal-row-hasmgbtm">
      <%= f.label :username, class: "col-sm-2 formglobal-inp-label" %>
      <div class="col-sm-10">
        <%= f.text_field :username, class: "form-control", placeholder: "username" %>
      </div>
    </div>
    <div class="form-group row formglobal-row-hasmgbtm">
      <%= f.label :email, class: "col-sm-2 formglobal-inp-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", placeholder: "email@mail.com" %>
      </div>
    </div>
    <div class="form-group row formglobal-row-hasmgbtm">
      <%= f.label :password, class: "col-sm-2 formglobal-inp-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "btn btn-outline-success") %>
      </div>
    </div>
  <% end %>

</div>
