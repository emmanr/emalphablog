<div class="formglobal">
  <%= render partial: "shared/errors", locals: { notif: @user, render_from: "notification-users" } %>

  <%= form_with model: @user, local: true do |f| %>
    <div class="form-group row formglobal-row-hasmgbtm">
      <label for="article_title" class="col-sm-2 formglobal-inp-label"><%= f.label :username %></label>
      <div class="col-sm-10">
        <%= f.text_field :username, class: "form-control", placeholder: "username" %>
      </div>
    </div>
    <div class="form-group row formglobal-row-hasmgbtm">
      <label for="article_title" class="col-sm-2 formglobal-inp-label"><%= f.label :email %></label>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", placeholder: "email@mail.com" %>
      </div>
    </div>
    <div class="form-group row formglobal-row-hasmgbtm">
      <label for="article_title" class="col-sm-2 formglobal-inp-label"><%= f.label :password %></label>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit "Sign up", class: "btn btn-outline-success" %>
      </div>
    </div>
  <% end %>

</div>
