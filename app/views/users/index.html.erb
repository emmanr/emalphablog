<div class="users">
  <h1 class="main-heading">User's Profiles</h1>

  <div class="container-md">
    <table class="table table-hover users-table">
      <thead>
        <tr>
          <th scope="col">Username</th>
          <th scope="col">Email</th>
          <th scope="col">Articles</th>
          <th scope="col">Created At</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user_path(user.id), class: "users-table-link" %></td>
          <td><%= user.email %></td>
          <td><%= pluralize(user.articles.count, "article") %></td>
          <td>Created <%= time_ago_in_words(user.created_at) %> ago</td>
          <td>
            <%= link_to "Edit", edit_user_path(user.id), class: "btn btn-outline-primary" %>
            <%= link_to "Delete", users_path(user.id), method: :delete, data: { confirm: "Are you sure you want to remove this user?" }, class: "btn btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
