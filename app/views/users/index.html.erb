<div class="users">
  <h1 class="main-heading">User's Profiles</h1>

  <div class="container-md">
    <div class="mb-4">
      <%= will_paginate @users %>
    </div>

    <table class="table table-hover users-table">
      <thead>
        <tr>
          <th scope="col">Username</th>
          <th scope="col">Email</th>
          <th scope="col">Articles</th>
          <th scope="col">Created At</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="align-middle"><%= link_to user.username, user_path(user), class: "users-table-link" %></td>
          <td class="align-middle"><%= user.email %></td>
          <td class="align-middle"><%= pluralize(user.articles.count, "article") %></td>
          <td class="align-middle">Created <%= time_ago_in_words(user.created_at) %> ago</td>
          <td class="align-middle">
            <% if logged_in? && (current_user == user || current_user.id == 1)  %>
              <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-primary" %>
              <%= link_to "Delete", users_path(user), method: :delete, data: { confirm: "Are you sure you want to remove this user?" }, class: "btn btn-outline-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>

    <div class="mt-3">
      <%= will_paginate @users %>
    </div>
  </div>
</div>
