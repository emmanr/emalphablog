<% set_meta_tags title: "Login" %>

<div class="sessions">
  <h1 class="main-heading">Login Page</h1>

  <div class="formglobal">
    <%= form_with scope: :session, url: :login, local: true do |f| %>
    <div class="form-group row formglobal-row-hasmgbtm">
      <%= f.label :username, class: "col-sm-2 formglobal-inp-label" %>
      <div class="col-sm-10">
        <%= f.text_field :username, class: "form-control", placeholder: "username" %>
      </div>
    </div>

    <div class="form-group row formglobal-row-hasmgbtm">
      <%= f.label :password, class: "col-sm-2 formglobal-inp-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit "Login", class: "btn btn-outline-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
