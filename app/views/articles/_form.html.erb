<div class="formglobal">
  <%= render partial: "shared/errors", locals: { notif: @article, render_from: "notification-articles" } %>

  <%= form_with model: @article, local: true do |f| %>
    <div class="form-group row formglobal-row-hasmgbtm">
      <label for="article_title" class="col-sm-2 formglobal-inp-label"><%= f.label :title %></label>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
      </div>
    </div>
    <div class="form-group row formglobal-row-hasmgbtm">
      <label for="article_description" class="col-sm-2 formglobal-inp-label"><%= f.label :description %></label>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control", placeholder: "Description" %>
      </div>
    </div>
    <div class="form-group row formglobal-row-hasmgbtm">
      <label for="article_description" class="col-sm-2 formglobal-inp-label"><%= f.label :description %></label>
      <div class="col-sm-10">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cat| %>
          <% cat.label(class: "checkbox-inline") { cat.check_box(class: "checkbox") + cat.text } %>
        <% end %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= link_to "â€¹ Back", articles_path, class: "btn btn-outline-primary" %>
        <%= f.submit class: "btn btn-outline-success" %>
      </div>
    </div>
  <% end %>
</div>
