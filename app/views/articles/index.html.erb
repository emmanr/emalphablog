<h1>Articles listing page</h1>

<p><%= link_to "New Article", new_article_path %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |art| %>
      <tr>
        <td><%= art.title %></td>
        <td width="300"><%= art.description %></td>
        <td><%= link_to "Show", article_path(art) %></td>
        <td><%= link_to "Edit", edit_article_path(art) %></td>
        <td><%= link_to "Delete", article_path(art), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
