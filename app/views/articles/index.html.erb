<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |art| %>
      <tr>
        <td><%= art.title %></td>
        <td><%= art.description %></td>
        <td><%= link_to "Show", article_path(art) %></td>
        <td><%= link_to "Edit", edit_article_path(art) %></td>
        <td><%= link_to "Delete", article_path(art), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to "Create new Article", new_article_path %><br>
  <%= link_to "About", about_path %><br>
  <%= link_to "Homepage", root_path %>
</p>
