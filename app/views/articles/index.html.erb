<div class="articles">
  <h1 class="articles-heading">Articles listing page</h1>

  <div class="articles-contwrap">
    <section class="articles-table">
      <p class="articles-table-thead">Title</p>
      <p class="articles-table-thead">Description</p>
      <p class="articles-table-thead">Actions</p>
      <% @articles.each do |art| %>
        <p><%= art.title %></p>
        <p><%= art.description %></p>
        <p>
          <%= link_to "Show", article_path(art), class: "btn-blue articles-table-btn" %>
          <%= link_to "Edit", edit_article_path(art), class: "btn-blue articles-table-btn" %>
          <%= link_to "Delete", article_path(art), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-red articles-table-btn" %>
        </p>
      <% end %>
    </section>
    <%= link_to "New Article", new_article_path, class: "btn-green articles-btn-new pull-right" %>
  </div>
</div>
